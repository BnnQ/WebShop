@model Homework.Data.Entities.Category

@{
    ViewData["Title"] = "Details";
}

<div id="body" class="container">
    <div class="row justify-content-center">
        <div class="col-lg-8 col-md-10 col-sm-12">
            <h1>Details</h1>
            <h4>Category</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Name)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Name)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.UnitName)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.UnitName)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.ParentCategory)
                </dt>
                <dd class="col-sm-10">
                    @if (Model.ParentCategory is not null)
                    {
                        @Html.DisplayFor(model => model.ParentCategory!.Name)
                    }
                    else
                    {
                        <p>No parent category</p>
                    }
                </dd>
            </dl>
         </div>
    </div>
</div>