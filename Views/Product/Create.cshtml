@model ProductCreationDto

@{
    ViewData["Title"] = "Create";
}

<div id="body" class="container-fluid">
    <div class="row">
        <h1>Create</h1>
        <h4>Product</h4>
        <hr />
        <div class="row justify-content-center">
            <div class="col-md-4">
                <form asp-action="Create" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Title" class="control-label"></label>
                        <input asp-for="Title" autocomplete="off" class="form-control" />
                        <span asp-validation-for="Title" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ManufacturerId" class="control-label"></label>
                        <select asp-for="ManufacturerId" class="form-control" asp-items="ViewBag.ManufacturerId"></select>
                    </div>
                    <div class="form-group">
                        <label asp-for="Rating" class="control-label"></label>
                        <input asp-for="Rating" autocomplete="off" class="form-control" />
                        <span asp-validation-for="Rating" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Price" class="control-label"></label>
                        <input asp-for="Price" autocomplete="off" class="form-control" />
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Count" class="control-label"></label>
                        <input asp-for="Count" autocomplete="off" class="form-control" />
                        <span asp-validation-for="Count" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="CategoryId" class="control-label"></label>
                        <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.CategoryId"></select>
                    </div>
                    <div class="form-group">
                        <label for="images" class="control-label">Product images</label>
                        <input type="file" id="images" name="images" class="form-control" accept="image/*" multiple />
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-primary w-100" />
                        <a class="btn btn-secondary w-100" asp-action="List">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
